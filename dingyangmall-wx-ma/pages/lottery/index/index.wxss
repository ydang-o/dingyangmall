.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.header {
  background: #ff5722;
  color: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.title { font-size: 40rpx; font-weight: bold; margin-bottom: 10rpx; }
.sub-title { font-size: 28rpx; opacity: 0.9; margin-bottom: 20rpx; }
.points, .limit { font-size: 26rpx; display: inline-block; margin: 0 10rpx; }

.wheel-area {
  margin: 50rpx 0;
  text-align: center;
}
.draw-btn {
  background: #ff9800;
  color: #fff;
  border-radius: 50rpx;
  width: 60%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 152, 0, 0.4);
}
.draw-btn[disabled] {
  background: #ccc;
  box-shadow: none;
  color: #666;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #ff5722;
  padding-left: 20rpx;
}

.prize-list {
  background: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}
.prize-grid {
  display: flex;
  flex-wrap: wrap;
}
.prize-item {
  width: 33.33%;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
.prize-img {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.prize-name {
  font-size: 24rpx;
  color: #333;
}

.record-list {
  background: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
}
.record-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
}
.record-item:last-child { border-bottom: none; }
.time { color: #999; flex: 1; }
.name { color: #333; flex: 1; text-align: center; }
.status { color: #ff5722; flex: 0.5; text-align: right; }
.empty { text-align: center; padding: 40rpx; color: #999; }
