<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-red cur':''}}" wx:for="{{tabList}}" wx:key="id" bindtap="tabSelect" data-id="{{index}}">
      {{item.name}}
    </view>
  </view>
</scroll-view>

<view class="cu-card article no-card margin-top">
  <view class="cu-item shadow" wx:for="{{coupons}}" wx:key="id">
    <view class="content">
      <view class="desc">
        <view class="text-content padding-top-sm">
          <view class="flex justify-between align-center">
             <view class="text-bold text-xl">{{item.goodsName || '通用券'}}</view>
             <view class="cu-tag line-red" wx:if="{{item.couponStatus == 1}}">未使用</view>
             <view class="cu-tag line-gray" wx:if="{{item.couponStatus == 2}}">已使用</view>
             <view class="cu-tag line-gray" wx:if="{{item.couponStatus == 3}}">已过期</view>
          </view>
          <view class="margin-top-xs">券码：<text class="text-blue text-lg" bindtap="copyCode" data-code="{{item.couponCode}}">{{item.couponCode}}</text></view>
          <view class="margin-top-xs text-gray text-sm">有效期至：{{item.validityEnd}}</view>
        </view>
      </view>
    </view>
    <view class="action padding-right padding-bottom" wx:if="{{item.couponStatus == 1}}">
        <view class="text-xs text-gray">出示券码给商家核销</view>
    </view>
  </view>
  <view class="padding text-center text-gray margin-top" wx:if="{{coupons.length == 0}}">
    暂无优惠券
  </view>
</view>