FROM redis
# author
MAINTAINER www.dingyangmall.com

# 挂载目录
VOLUME /home/dingyangmall/redis
# 创建目录
RUN mkdir -p /home/dingyangmall/redis
# 指定路径
WORKDIR /home/dingyangmall/redis
# 复制conf文件到路径
COPY ./conf/redis.conf /home/dingyangmall/redis/redis.conf

EXPOSE 6379

CMD [ "redis-server", "/home/dingyangmall/redis/redis.conf" ]
